{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./cms/*"],
      "@collections/*": ["./cms/collections/*"]
    }
  },
  "include": [
    "index.ts",
    "cms/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
